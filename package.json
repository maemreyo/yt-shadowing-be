{
  "name": "modern-backend-template",
  "version": "2.0.0",
  "description": "Production-ready Node.js backend template with TypeScript",
  "main": "dist/app.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.12.1",
  "scripts": {
    "module:generate": "tsx scripts/generate-module.ts",
    "module:new": "tsx scripts/generate-module.ts",
    "module:new:api": "echo 'Use module:generate and select API features'",
    "module:new:service": "echo 'Use module:generate and select service features'",
    "module:list": "tsx scripts/list-modules.ts",
    "module:enable": "tsx scripts/toggle-module.ts enable",
    "module:disable": "tsx scripts/toggle-module.ts disable",
    "module:status": "tsx scripts/list-modules.ts",
    "module:test": "vitest run src/modules/",
    "module:build": "tsc --noEmit -p src/modules/",
    "env:generate": "tsx scripts/generate-env.ts",
    "env:generate:force": "tsx scripts/generate-env.ts --force",
    "env:generate:minimal": "tsx scripts/generate-env.ts --force --config='{\"modules\":{\"auth\":true,\"user\":true,\"notification\":true,\"analytics\":true},\"services\":{\"database\":\"postgresql\",\"redis\":true,\"email\":\"smtp\",\"storage\":\"local\"}}'",
    "env:generate:saas": "tsx scripts/generate-env.ts --force --config='{\"modules\":{\"auth\":true,\"user\":true,\"billing\":true,\"tenant\":true,\"notification\":true,\"support\":true,\"analytics\":true,\"webhooks\":true,\"admin\":true,\"apiUsage\":true},\"services\":{\"database\":\"postgresql\",\"redis\":true,\"elasticsearch\":true,\"email\":\"smtp\",\"storage\":\"local\"},\"features\":{\"oauth\":true,\"twoFactor\":true}}'",
    "env:generate:api": "tsx scripts/generate-env.ts --force --config='{\"modules\":{\"auth\":true,\"user\":true,\"apiUsage\":true,\"webhooks\":true,\"analytics\":true},\"services\":{\"database\":\"postgresql\",\"redis\":true,\"email\":\"none\",\"storage\":\"local\"}}'",
    "env:validate": "tsx scripts/validate-env.ts",
    "setup": "tsx scripts/generate-env.ts && pnpm install && pnpm bootstrap:fresh",
    "setup:wizard": "tsx scripts/setup.ts",
    "postinstall": "prisma generate",
    "prebuild": "pnpm run db:generate",
    "dev": "tsx watch src/app.ts",
    "build": "rimraf dist && tsc && tsc-alias",
    "start": "node dist/app.js",
    "start:prod": "NODE_ENV=production node dist/app.js",
    "test": "vitest",
    "test:unit": "vitest run --dir src",
    "test:integration": "vitest run --dir tests/integration",
    "test:e2e": "vitest run --dir tests/e2e",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:seed": "tsx src/infrastructure/database/seed.ts",
    "db:studio": "prisma studio",
    "docker:build": "docker build -t modern-backend .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "cli": "tsx src/cli/index.ts",
    "services:start": "tsx scripts/services-manager.ts start",
    "services:stop": "tsx scripts/services-manager.ts stop",
    "services:restart": "tsx scripts/services-manager.ts restart",
    "services:status": "tsx scripts/services-manager.ts status",
    "services:health": "tsx scripts/services-manager.ts health",
    "bootstrap": "tsx scripts/db-bootstrap.ts bootstrap",
    "bootstrap:fresh": "tsx scripts/db-bootstrap.ts fresh",
    "bootstrap:reset": "tsx scripts/db-bootstrap.ts reset",
    "setup:env": "tsx scripts/generate-env.ts",
    "check:env": "tsx scripts/check-env.ts",
    "health:check": "curl http://localhost:3000/health",
    "health:modules": "curl http://localhost:3000/health/modules",
    "modules:list": "tsx scripts/list-modules.ts",
    "modules:enable": "tsx scripts/toggle-module.ts enable",
    "modules:disable": "tsx scripts/toggle-module.ts disable",
    "maintenance:on": "tsx scripts/maintenance.ts enable",
    "maintenance:off": "tsx scripts/maintenance.ts disable",
    "generate:secret": "tsx scripts/generate-secret.ts",
    "validate:env": "tsx scripts/validate-env.ts",
    "docs": "npm run docs:clean && npm run docs:generate",
    "docs:clean": "rimraf docs/api",
    "docs:generate": "typedoc",
    "docs:generate:module": "node scripts/generate-module-docs.js",
    "docs:watch": "typedoc --watch",
    "docs:serve": "npm run docs:generate && npx serve docs/api",
    "docs:markdown": "typedoc --plugin typedoc-plugin-markdown --out docs/markdown",
    "docs:json": "typedoc --json docs/api.json",
    "docs:validate": "typedoc --emit none",
    "predocs": "npm run build"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.17.0",
    "@elastic/elasticsearch": "^8.11.0",
    "@fastify/autoload": "^5.8.0",
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/multipart": "^8.2.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/sensible": "^5.5.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@google-ai/generativelanguage": "^2.1.0",
    "@google/generative-ai": "0.24.1",
    "@prisma/client": "^5.11.0",
    "@sendgrid/mail": "^8.1.0",
    "@sentry/node": "^7.108.0",
    "@sentry/profiling-node": "^7.108.0",
    "algoliasearch": "^4.22.0",
    "argon2": "^0.31.2",
    "bull": "4.16.5",
    "bullmq": "^5.4.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cls-hooked": "^4.2.2",
    "cron": "4.3.1",
    "date-fns": "4.1.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.2",
    "fastify-plugin": "^4.5.1",
    "geoip-lite": "1.4.10",
    "google-auth-library": "^9.7.0",
    "handlebars": "4.7.8",
    "html-minifier-terser": "7.2.0",
    "ioredis": "^5.3.2",
    "isomorphic-dompurify": "2.25.0",
    "jsdom": "26.1.0",
    "json2csv": "6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "juice": "11.0.1",
    "mixpanel": "^0.18.0",
    "nanoid": "^5.0.6",
    "nodemailer": "^6.9.12",
    "ollama": "^0.5.0",
    "openai": "^4.28.0",
    "otplib": "^12.0.1",
    "papaparse": "5.5.3",
    "pdfkit": "0.17.1",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "qrcode": "^1.5.3",
    "rate-limiter-flexible": "^5.0.0",
    "reflect-metadata": "^0.2.1",
    "stripe": "^14.0.0",
    "typedi": "^0.10.0",
    "ua-parser-js": "2.0.3",
    "unleash-client": "^5.1.0",
    "xlsx": "0.18.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@swc/core": "^1.4.8",
    "@types/jsdom": "21.1.7",
    "@types/json2csv": "5.0.7",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.28",
    "@types/nodemailer": "^6.4.14",
    "@types/pdfkit": "0.13.9",
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitest/coverage-v8": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "boxen": "^7.1.1",
    "chalk": "^5.4.1",
    "commander": "^12.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "inquirer": "^9.3.7",
    "ora": "^8.2.0",
    "pino-colada": "^2.2.2",
    "prettier": "^3.2.5",
    "prisma": "^5.11.0",
    "rimraf": "^5.0.10",
    "supertest": "^6.3.4",
    "table": "^6.9.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.4",
    "typedoc": "0.28.5",
    "typedoc-plugin-markdown": "4.6.4",
    "typedoc-plugin-merge-modules": "7.0.0",
    "typedoc-plugin-missing-exports": "4.0.0",
    "typescript": "^5.4.2",
    "vite": "^5.1.6",
    "vitest": "^1.3.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maemreyo/saas-4cus-nodejs.git"
  },
  "keywords": [
    "nodejs",
    "backend",
    "template",
    "typescript",
    "fastify",
