  REGULAR
  AUTOMATED
  DRIP
  TRANSACTIONAL
  AB_TEST
}

enum EmailSegmentOperator {
  EQUALS
  NOT_EQUALS
  CONTAINS
  NOT_CONTAINS
  GREATER_THAN
  LESS_THAN
  IN
  NOT_IN
}

